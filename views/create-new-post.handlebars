<div class="post-card">
  <div class="card-header">
    <h4>Create New Post</h4>
  </div>
  <form id="create-post-form" class="card-body">
    <label class="form-label" for="post-title">Title</label>
    <input id= "post-title" type="text" name="post-title" class="form-input" />

    <label class="form-label" id="post-body" for="post-body">Content</label>
