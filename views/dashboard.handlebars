<div class="posts">
  {{#each posts}}
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>
        <a href="/dashboard/edit/{{id}}">{{title}}</a>
      </h2>
      <div>
        Posted by {{User.name}} on {{format_date createdAt}}
      </div>
    </div>
  </article>
  {{/each}}
</div>